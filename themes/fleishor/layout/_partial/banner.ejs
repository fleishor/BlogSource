<!-- _partial/banner.ejs -->
<div class="w-100 bg-banner ph5-ns ph3 text-light">
    
    <nav class="db dt-l w-100 mw8 center border-box pv3">
        <div class="db dtc-l v-mid w-100 w-75-l tc tr-l">
            <% for (var i in theme.menu) { %>
                <a class="link dim f6 f5-l dib mr3 mr4-l white" 
                    href="<%- url_for(theme.menu[i]) %>" 
                    title="<%= i %>">
                    <%= i %>
                </a>
            <% } %>
        </div>
    </nav>

    <!-- Title -->
    <div class="w-100 mw8 center vh-20 dt">
        <div class="dtc v-mid white">
            <h1 class="f1-l f2-m tc tc-m tl-ns"><%- config.title %></h1>
            <p class="f4 fw3 tc tc-m tl-ns"><%- config.subtitle %></p>
        </div>
    </div>
</div>